	<template>
		<name>Queue</name>
		<parameter>const ProcessRange pid, const QueueRange id, const int size</parameter>
		<declaration>int head;
int tail;
int arr[size];


void q_enqueue(int el)
{
    arr[tail]=el;
    tail = (tail+1) % size;
}

int q_dequeue()
{
    int ret = arr[head];
    head = (head+1) % size;
    return ret;
}

bool q_hasNext()
{
    return head != tail;
}</declaration>
